<?php 


if(! defined('ABSPATH')){
    exit;
}
// Class started
class codefactorykcExtendAddonClass {
    function __construct() {
        // We safely integrate with kc with this hook
        add_action( 'init', array( $this, 'codefactoryIntegrateWithkc' ) );
    }
 
    public function codefactoryIntegrateWithkc() {
        // Checks if King composer is not installed
        if ( ! defined( 'WPB_KC_VERSION' ) ) {
            add_action('admin_notices', array( $this, 'codefactoryShowkcVersionNotice' ));
            return;
        }
 
        // King composer addons.
        include CODEFACTORY_ACC_PATH . '/kc-addons/kc-slides.php';
    }
    
    // show King composer version
    public function codefactoryShowkcVersionNotice() {
        $theme_data = wp_get_theme();
        echo '
        <div class="notice notice-warning">
          <p>'.sprintf(__('<strong>%s</strong> recommends <strong><a href="'.site_url().'/wp-admin/themes.php?page=tgmpa-install-plugins" target="_blank">King Composer</a></strong> plugin to be installed and activated on your site.', 'codefactory-codebank'), $theme_data->get('Name')).'</p>
        </div>';
    }
}
// Finally initialize code
new codefactorykcExtendAddonClass();







?>
